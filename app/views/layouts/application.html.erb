<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<%= render 'layouts/shared/nav' %>
	
	
	<div class="flash_alerts">
		<% if flash[:alert] %>
		    <p id="alert"><%= flash[:alert] %></p>
		<% end %>
		<% if flash[:notice] %>
		    <p id="notice"><%= flash[:notice] %></p>
		<% end %>
	</div>	

	<div class="container">
		<%= yield %>
	</div>
	
</body>
</html>
